<h1>Sign Up </h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <p><%= @user.errors.full_messages.join(', ') %> </p>
  <% end %>

  <div>
    <%= f.label :first_name %>
    <br>
    <%= f.text_field :first_name %>
  </div>
  <div>
    <%= f.label :last_name %>
    <br>
    <%= f.text_field :last_name %>
  </div>
  <div>
    <%= f.label :email %>
    <br>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %>
    <br>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit %>
<% end %>
