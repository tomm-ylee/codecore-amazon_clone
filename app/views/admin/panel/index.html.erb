<h1>Admin Panel</h1>
<p> <%= @products.count %> number of products</p>
<p> <%= @reviews.count %> number of reviews</p>
<p> <%= @users.count %> number of products</p>

<table>
  <thead>
    <h2> Product List </h2>
  </thead>
  <tbody>
    <tr>
      <th>Product id</th>
      <th>| Product Title</th>
    </tr>

    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td>| <%= link_to "#{product.title}", product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
    <h2> Users</h2>
  </thead>
  <tbody>
    <tr>
      <th>User id</th>
      <th>| First Name</th>
      <th>| Last Name</th>
      <th>| Email</th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= link_to "#{user.id}", user_path(user) %></td>
        <td>| <%= user.first_name %></td>
        <td>| <%= user.last_name %></td>
        <td>| <%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
